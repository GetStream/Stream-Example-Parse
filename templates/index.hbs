	<div class="container">
      <div class="row">
        <div class="col-md-4">
            <div class="logo-container centered">
              <img src="images/logo.png" alt="">
            </div>
            <div id="update_status">
				<form>
					<div>
						Update your status
					</div>
					<div>
						{{textarea value=status cols="40" rows="3" placeholder="What's on your mind?"}}
					</div>
					<div>
						Or upload an image
						<input type="file" id="profilePhotoFileUpload">
					</div>
					
					{{#if session.isAuthenticated}}
						<button {{action 'status'}}>Update Status</button>
						{{# if errors.status }}
						{{ errors.status }}
						{{/if }}
					{{else}}
						<a {{ action 'login' }}>Login with Github</a> to share your status
					{{/if}}
				</form>
			</div>
